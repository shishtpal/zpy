# Check file extensions
files = ["image.png", "report.pdf", "data.txt", "script.py"]
print("\nFile extensions:")
for f in files:
    if f.endswith(".txt"):
        print("  ", f, "- Text file")
    elif f.endswith(".pdf"):
        print("  ", f, "- PDF file")
    elif f.endswith(".png"):
        print("  ", f, "- Image file")
    else:
        print("  ", f, "- Other")

