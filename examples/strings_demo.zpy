# ============================================
# String Indexing
# ============================================
print("\n--- String Indexing ---")

text = "ABCDEFGHIJ"
print("Text:", text)
print("First char (index 0):", text[0])
print("Last char (index -1):", text[-1])
print("Third char (index 2):", text[2])
print("Second to last (index -2):", text[-2])

# ============================================
# String Iteration
# ============================================
print("\n--- String Iteration ---")

word = "Python"
print("Characters in 'Python':")
for char in word:
    print("  ", char)

# ============================================
# String Concatenation
# ============================================
print("\n--- String Concatenation ---")

first = "Hello"
second = "World"
combined = first + " " + second + "!"
print("Combined:", combined)

# Building string in loop
result = ""
for i in range(5):
    result = result + str(i)
print("Built string:", result)

# ============================================
# String Multiplication
# ============================================
print("\n--- String Multiplication ---")

print("'=' * 20:", "=" * 20)
print("'ab' * 5:", "ab" * 5)
print("3 * 'xyz':", 3 * "xyz")

# Building patterns
for i in range(1, 6):
    print("*" * i)

# ============================================
# Case Conversion
# ============================================
print("\n--- Case Conversion ---")

mixed = "Hello World"
print("Original:", mixed)
print("Upper:", mixed.upper())
print("Lower:", mixed.lower())

sentence = "tHiS iS wEiRd CaSe"
