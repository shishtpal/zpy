# Character frequency
print("\nCharacter frequency in 'mississippi':")
sample = "mississippi"
def char_frequency(s):
    freq = {}
    for c in s:
        if c in freq.keys():
            freq[c] += 1
        else:
            freq[c] = 1
    return freq

print(char_frequency(sample))

