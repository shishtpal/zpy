print("Maximum:", find_max(data))
print("Minimum:", find_min(data))

# ============================================
# Reverse Array
# ============================================
print("\n--- Reverse Array ---")

def reverse_array(arr):
    left = 0
    right = len(arr) - 1
    while left < right:
        temp = arr[left]
        arr[left] = arr[right]
        arr[right] = temp
        left += 1
        right -= 1
    return arr

original = [1, 2, 3, 4, 5]
print("Before:", original)
reverse_array(original)
print("After:", original)

# ============================================
# Remove Duplicates
# ============================================
print("\n--- Remove Duplicates ---")

def remove_duplicates(arr):
    result = []
    for item in arr:
        if item not in result:
            result.append(item)
    return result

with_dups = [1, 2, 2, 3, 4, 4, 4, 5, 1, 2]
print("With duplicates:", with_dups)
print("Without duplicates:", remove_duplicates(with_dups))

# ============================================
# Two Sum Problem
# ============================================
print("\n--- Two Sum Problem ---")

def two_sum(arr, target):
    # Find two numbers that add up to target
    for i in range(len(arr)):
        for j in range(i + 1, len(arr)):
            if arr[i] + arr[j] == target:
                return [i, j]
    return []

nums = [2, 7, 11, 15]
print("Array:", nums)
print("Target 9, indices:", two_sum(nums, 9))
print("Target 18, indices:", two_sum(nums, 18))

