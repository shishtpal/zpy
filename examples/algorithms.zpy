# ============================================
print("\n--- Find Max/Min ---")

def find_max(arr):
    if len(arr) == 0:
        return none
    maximum = arr[0]
    for i in range(1, len(arr)):
        if arr[i] > maximum:
            maximum = arr[i]
    return maximum

def find_min(arr):
    if len(arr) == 0:
        return none
    minimum = arr[0]
    for i in range(1, len(arr)):
        if arr[i] < minimum:
            minimum = arr[i]
    return minimum

