# ============================================
# Prime Numbers
# ============================================
print("\n--- Prime Numbers ---")

def is_prime(n):
    if n < 2:
        return false
    if n == 2:
        return true
    if n % 2 == 0:
        return false
    i = 3
    while i * i <= n:
        if n % i == 0:
            return false
        i += 2
    return true

print("Prime check:")
for num in [2, 3, 4, 5, 13, 17, 20, 23, 29, 30]:
    print("  ", num, "is prime:", is_prime(num))

# Find primes up to n
def sieve_primes(limit):
    primes = []
    for n in range(2, limit + 1):
        if is_prime(n):
            primes.append(n)
    return primes

print("\nPrimes up to 50:", sieve_primes(50))

# ============================================
# Perfect Numbers
# ============================================
print("\n--- Perfect Numbers ---")

def divisor_sum(n):
    total = 0
    for i in range(1, n):
        if n % i == 0:
            total += i
    return total

def is_perfect(n):
    return divisor_sum(n) == n

print("Perfect numbers up to 100:")
for num in range(1, 101):
    if is_perfect(num):
        print("  ", num, "(divisors sum to", divisor_sum(num), ")")

