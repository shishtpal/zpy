# ============================================
# Power/Exponentiation
# ============================================
print("\n--- Powers ---")

def power(base, exp):
    result = 1
    for i in range(exp):
        result *= base
    return result

print("2^8 =", power(2, 8))
print("3^5 =", power(3, 5))
print("10^3 =", power(10, 3))

# Powers of 2
print("\nPowers of 2:")
for i in range(11):
    print("  2^", i, "=", power(2, i))

# ============================================
# Square Root (Newton's method)
# ============================================
print("\n--- Square Root (Newton's Method) ---")

def sqrt(n):
    if n < 0:
        return none
    if n == 0:
        return 0.0
    guess = float(n) / 2.0
    for i in range(20):  # 20 iterations
        guess = (guess + float(n) / guess) / 2.0
    return guess

print("sqrt(4) =", sqrt(4))
print("sqrt(9) =", sqrt(9))
print("sqrt(2) =", sqrt(2))
print("sqrt(100) =", sqrt(100))
print("sqrt(2025) =", sqrt(2025))

