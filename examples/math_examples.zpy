# ============================================
# Collatz Conjecture
# ============================================
print("\n--- Collatz Sequence ---")

def collatz_sequence(n):
    seq = [n]
    while n != 1:
        if n % 2 == 0:
            n = n / 2
        else:
            n = 3 * n + 1
        seq.append(n)
    return seq

print("Collatz(7):", collatz_sequence(7))
print("Collatz(27) length:", len(collatz_sequence(27)))

# ============================================
# Pascals Triangle
# ============================================
print("\n--- Pascal's Triangle ---")

def pascals_row(n):
    row = [1]
    for i in range(n):
        row.append(row[i] * (n - i) / (i + 1))
    return row

print("Pascal's Triangle (first 7 rows):")
for i in range(7):
    print(pascals_row(i))

# ============================================
# Arithmetic Sequences
# ============================================
print("\n--- Arithmetic Sequence ---")

def arithmetic_seq(first, diff, count):
    seq = []
    for i in range(count):
        seq.append(first + i * diff)
    return seq

print("Start=2, diff=3, 10 terms:", arithmetic_seq(2, 3, 10))

def arithmetic_sum(first, diff, count):
    # Sum = n/2 * (2a + (n-1)d)
    return count * (2 * first + (count - 1) * diff) / 2

print("Sum:", arithmetic_sum(2, 3, 10))

# ============================================
# Geometric Sequences
# ============================================
print("\n--- Geometric Sequence ---")

def geometric_seq(first, ratio, count):
    seq = []
    current = first
    for i in range(count):
        seq.append(current)
        current *= ratio
    return seq

print("Start=1, ratio=2, 10 terms:", geometric_seq(1, 2, 10))

