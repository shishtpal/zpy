print("\n--- Physics Calculations ---")

# Projectile motion (ignoring air resistance)
def projectile_range(velocity, angle_deg):
    g = 9.81
    angle_rad = deg_to_rad(angle_deg)
    return velocity ** 2 * math_sin(2 * angle_rad) / g

def projectile_max_height(velocity, angle_deg):
    g = 9.81
    angle_rad = deg_to_rad(angle_deg)
    return (velocity * math_sin(angle_rad)) ** 2 / (2 * g)

print("Projectile (v=50 m/s, angle=45 deg):")
print("  Range:", projectile_range(50, 45), "meters")
print("  Max height:", projectile_max_height(50, 45), "meters")

# Simple pendulum period
def pendulum_period(length):
    g = 9.81
    return 2 * math_pi() * math_sqrt(length / g)

print("\nPendulum (length=1m):")
print("  Period:", pendulum_period(1), "seconds")

