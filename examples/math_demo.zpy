# Distance between two points
def distance(x1, y1, x2, y2):
    return math_hypot(x2 - x1, y2 - y1)

print("Distance (0,0) to (3,4):", distance(0, 0, 3, 4))
print("Distance (1,1) to (4,5):", distance(1, 1, 4, 5))

# Circle calculations
def circle_area(radius):
    return math_pi() * radius ** 2

def circle_circumference(radius):
    return 2 * math_pi() * radius

print("\nCircle (radius=5):")
print("  Area:", circle_area(5))
print("  Circumference:", circle_circumference(5))

# Pythagorean theorem
def is_right_triangle(a, b, c):
    # Check if a^2 + b^2 = c^2
    return math_fabs(a ** 2 + b ** 2 - c ** 2) < 0.0001

print("\nRight triangle check:")
print("  (3, 4, 5):", is_right_triangle(3, 4, 5))
print("  (5, 12, 13):", is_right_triangle(5, 12, 13))
print("  (1, 2, 3):", is_right_triangle(1, 2, 3))

# Logarithm base conversion
def log_base(x, base):
    return math_log(x) / math_log(base)

print("\nCustom base logarithms:")
print("log_2(8) =", log_base(8, 2))
print("log_3(27) =", log_base(27, 3))
print("log_5(125) =", log_base(125, 5))

# Compound interest
def compound_interest(principal, rate, years):
    return principal * (1 + rate) ** years

print("\nCompound interest ($1000 at 5% for 10 years):")
print("  Final amount:", compound_interest(1000, 0.05, 10))

# Quadratic formula
def quadratic_roots(a, b, c):
    discriminant = b ** 2 - 4 * a * c
    if discriminant < 0:
        return none
    sqrt_disc = math_sqrt(discriminant)
    root1 = (-b + sqrt_disc) / (2 * a)
    root2 = (-b - sqrt_disc) / (2 * a)
    return [root1, root2]

print("\nQuadratic formula (x^2 - 5x + 6 = 0):")
roots = quadratic_roots(1, -5, 6)
print("  Roots:", roots)

