# Helper: degrees to radians
def deg_to_rad(degrees):
    return degrees * math_pi() / 180

# Helper: radians to degrees
def rad_to_deg(radians):
    return radians * 180 / math_pi()

print("\nUsing degrees:")
print("sin(90 deg) =", math_sin(deg_to_rad(90)))
print("cos(60 deg) =", math_cos(deg_to_rad(60)))
